{% extends "base.j2" %}


{% block extraheader %}
  {% if resource.meta.image %}
    <div class="hero-unit" style="background-image: url('{{ resource.meta.image }}');"></div>
  {% endif %}
{% endblock %}

{% block scripts %}
  <!-- insert to make titles full page width -->
  <script type="text/javascript">
    console.log('scriptasdf dog');
    /* Make titles as wide as their container */
    var title = document.getElementById("thing-title");
    title.style.fontSize = (110/title.innerHTML.length) + "vw";
  </script>
{% endblock %}

{% block main %}
<div class="row">
     <div class="span10">
         <article class="thing">

         <div class='page-header'>
               <h1><span id="thing-title">{{ resource.meta.title }}</span><small>by {{ resource.meta.author }} on {{ resource.meta.date }}</small></h1>
         </div>
         {% if resource.meta.depricated %}
           <div class="deprication-note">
             <b>Depricated:</b>
             {{ resource.meta.depricated }}
           </div>
         {% endif %}
         {% mark article %}
         {% filter markdown %}{% block thing_content %}{% endblock %}{% endfilter %}
         {% endmark %}
         {% filter markdown %}{% block after_thing_content %}{% endblock %}{% endfilter %}
         </article>
     </div>
</div>

{% endblock %}
